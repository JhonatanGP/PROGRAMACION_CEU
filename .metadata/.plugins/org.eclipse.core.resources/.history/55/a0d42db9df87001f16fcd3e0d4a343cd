package ejRepaso;

import java.util.Scanner;

public class Ej01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Escibe un valor para x:");
		Integer x = sc.nextInt();
		System.out.println("Escibe un valor para y:");
		Integer y = sc.nextInt();
		
		System.out.println("El valor de X es " + x + " y el valor de Y es " + y);
		
		Integer s = x + y;
		Integer r = y - x;
		Integer m = x * y;
		Integer d = y / x;
		
		System.out.println("La suma de " + x + " + " + y + " es" + s + ".");
		System.out.println("La resta " + y + " - " + x + " es" + r + ".");
		System.out.println("La multiplicación de " + x + " x " + y + " es" + m + "." );
		System.out.println("La división es " + x + " : " + y + " es" + d + ".");
	}

}

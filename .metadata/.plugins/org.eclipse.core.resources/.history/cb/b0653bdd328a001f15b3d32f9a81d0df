package ej03PrácticosRepaso;

import java.util.Scanner;

public class Ej03 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Selecione una opción del menú:\n\t1. Abrir\n\t2. Guardar\n\t3. Modificar\n\t4. Salir");
		Integer n = sc.nextInt();
		Boolean v = true;
		
		do {
					
			if (n == 1) {
				System.out.println("Ha elegido la opción 1. Abrir");
				v = true;
			}
			else if(n == 2) {
				System.out.println("Ha elegido la opción 2. Guardar");
				v = true;
			}
			else if(n == 3) {
				System.out.println("Ha elegido la opción 3. Modificar");
				v = true;
			}
			else if(n == 4) {
				System.out.println("Ha elegido la opción 4. Salir. Bye Bye");
				v = false;
			}
			else {
				System.out.println("Opción de menú no es correcta.");
				v = true;
			}
		}
		while(v);
			
			sc.close();
		
		
	}

}

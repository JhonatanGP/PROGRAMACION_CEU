package tema03;

import java.util.Scanner;

public class Ej06 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		// Creamos un array de tamaño 3
        String[] palabras = new String[3];

        // Escribimos 3 palabras y las guardamos en el array
        for (int i = 0; i < 3; i++) {
            System.out.print("Ingresa la palabra " + (i + 1) + ": ");
            palabras[i] = sc.nextLine();
        }

        // Concatenamos todas las palabras en una sola cadena
        String resultado = "";
        for (String palabra : palabras) {
            resultado += palabra;
        }

        // Mostramos el resultado de la concatenación
        System.out.println("Palabras concatenadas: " + resultado);

        sc.close();
    }
}
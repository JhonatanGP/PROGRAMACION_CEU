package Tema02.ej03PrácticosRepaso;

import java.util.Random;
import java.util.Scanner;

public class Ej23 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Random r = new Random();
		Boolean v = true;
		
		
		System.out.println("¿Cuántas veces quieres lanzar el dado?:");
		Integer n = sc.nextInt();
		System.out.println("Pulse enter para tirar");
		sc.nextLine();
		do {
			Integer p = n;
			

			for (int i = 1; i <= n; i++) {
				Integer d = r.nextInt(1, 6);
				if (n == 9) {
					System.out.println("Ya no tienes más tiradas.");
				} else {
					System.out.println("Tiro " + i + ": " + d);
					v = false;
				}
			}
		} while (v);

	}
}

package tema03;

import java.util.Scanner;

public class Ej13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Escriba una palabra y vea como se ve al revÃ©s:");
		String p = sc.nextLine();
		//Creo un array y guardo p
		String[] caracter = p.split(""); //con esto guardo cadad caracter en una posicion del array
		
		for (int i = caracter.length-1; i >= 0 ; i--) {
			System.out.println(i);
		}
		
		
					
		sc.close();
	}
}

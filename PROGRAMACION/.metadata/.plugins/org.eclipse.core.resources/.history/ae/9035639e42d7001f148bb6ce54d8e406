package tema04.EjBasicos01.Ej25;

import java.util.Scanner;

public class Ej25 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Alumno a1 = new Alumno();
		Alumno a2 = new Alumno();
		Alumno a3 = new Alumno();

		Alumno[] lista = new Alumno[] { a1, a2, a3 };

		Curso c = new Curso();
		c.setDescripcion("DAM-DAW");
		c.setIdentificador("1");

		for (int i = 1; i < lista.length+1; i++) {
			Integer cont = 1;
			System.out.println("Escribe el dni del Alumno " + i);
			String dni = sc.nextLine();
			lista[i].setDni(dni);

			System.out.println("Escribe nota del Alumno " + i);
			Float nota = sc.nextFloat();
			
			lista[i].setNota(nota);

			lista[i].setCurso(c);
			sc.nextLine();
		}

		for (Alumno alumno : lista) {
			System.out.println(alumno);
		}

		for (int i = 0; i < lista.length; i++) {
			if (i == 2) {
				if (lista[i].equals(lista[i - 2])) {
					System.out.println("Error " + "Alumno " + lista[i].getDni());
				}
			} else if (i < 2) {
				if (lista[i].equals(lista[i + 1])) {
					System.out.println("Error " + "Alumno " + lista[i].getDni());
				}
			}

		}

		a2.setNombre("MANUEL");
		a2.setEdad(54);
		a2.setNota(3f);
		a2.setCurso(c);

		/*
		 * System.out.println("Tus datos son los siguientes: \n" + a2.getDni() + "\n" +
		 * a2.getNombre() + "\n" + a2.getEdad() + " aÃ±os" + "\nNota:" + a2.getNota() +
		 * "\nCurso:" + a2.getCurso().getDescripcion() + " " +
		 * a2.getCurso().getIdentificador());
		 */
		System.out.println(a2);

		sc.close();
	}

}

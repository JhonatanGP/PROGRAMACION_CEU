package Tema02.ej04Avanzado;

import java.util.Scanner;

public class Ej01 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int numero;

        // Solicitar al usuario un número mayor a 0
        do {
            System.out.print("Ingresa un número mayor a 0: ");
            numero = scanner.nextInt();
            if (numero <= 0) {
                System.out.println("El número debe ser mayor a 0. Inténtalo de nuevo.");
            }
        } while (numero <= 0);  // Repetir mientras el número no sea mayor a 0

        int suma = 0;

        // Calcular la suma de los números impares entre 1 y el número indicado
        for (int i = 1; i <= numero; i++) {
            if (i % 2 != 0) { // Verificar si el número es impar
                suma += i;
            }
        }

        // Mostrar el resultado de la suma
        System.out.println("La suma de los números impares entre 1 y " + numero + " es: " + suma);

        scanner.close();
    }
}

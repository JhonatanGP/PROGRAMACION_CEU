package Tema02.ej03Pr√°cticosRepaso;

import java.util.Scanner;

public class Ej23 {

	public static void main(String[] args) {
		
		for(int i = 1;i <= 9;i++) {
			System.out.println();
			for (int y = 1;y <= i;y++)  {
		/*Se y es mas chico o igual que i, imprime y con un espacio.
		Iguala "y" a "i" para que si "y" es mas grande que "i" se sale, y comienza de nuevo */
				System.out.print(" " + y + " ");	
			}
			System.out.println();
		}
		
		
		//Agrego nuevo
		for(int i = 8;i >= 1;i--) {
			System.out.println();
			for (int y = i;y >= 1;y--)  {
				System.out.print(" " + y + " ");	
			}
			System.out.println();
		}
	}
}

package Tema02.ej04Avanzado;

import java.util.Scanner;

public class Ej01 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Solicitar el límite superior para la suma de números impares
        System.out.print("Ingresa el límite superior para sumar números impares: ");
        int limite = scanner.nextInt();
        
        int suma = 0; // Inicializamos la variable para almacenar la suma
        
        // Iterar desde 1 hasta el límite ingresado
        for (int i = 1; i <= limite; i++) {
            if (i % 2 != 0) { // Verificar si el número es impar
                suma += i; // Sumar el número impar
            }
        }
        
        System.out.println("La suma de los números impares hasta " + limite + " es: " + suma);
        scanner.close();
    }
}

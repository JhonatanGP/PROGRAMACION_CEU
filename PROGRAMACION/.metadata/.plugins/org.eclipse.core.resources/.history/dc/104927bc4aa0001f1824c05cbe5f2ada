package tema03;

import java.util.Scanner;

public class Ej16 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.println("Escribe una frase y contaré el número de 'a' y palabras:");
		String frase = sc.nextLine();
		String[] pal = frase.split(" ");// para guardar cada palabra y espacio
		String[] a = frase.split("");// para guardar cada caracter

		Integer cont = 0;
		Integer cont1 = 0;
		for (int i = 0; i < pal.length; i++) { // para contar las pal me creo 1 varible = cont
			cont++; // para que sume las palabras
		}
		for (int i = 0; i < a.length; i++) { // para contar las a me creo 1 varible = cont1
			if (a[i].contains("a")) {
				cont1++; // para que sume las a
			}
		}
		System.out.println("Hay " + cont + " palabras y " + cont1 + " letras 'a'.");
		sc.close();
	}
}